<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPGEditor"
        xmlns:Properties="clr-namespace:TRPGEditor.Properties"
        xmlns:viewModel="clr-namespace:TRPGEditor.ViewModels"    
        xmlns:Views="clr-namespace:TRPGEditor.Views" x:Class="TRPGEditor.MainWindow"    
        mc:Ignorable="d"
        Title="TRPGEditor" Height="700" Width="1000"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:MainWindowViewModel/>
    </Window.DataContext>

    <Border Background="#389490"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="147*"/>
                <ColumnDefinition Width="253*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="217*"/>
            </Grid.RowDefinitions>
            <Button Command="{Binding addButtonCommand}"
                Margin="180,0,0,0"
                VerticalAlignment="Center"
                MinWidth="30"
                MinHeight="30"
                MaxWidth="30"
                MaxHeight="30"
                RenderTransformOrigin="0.5,0.5"
                HorizontalAlignment="Left"
                Height="30"
                Width="30"
                Background="Transparent"
                BorderThickness="0">
                <Image Source="images\plus.png"/>
            </Button>

            <ContentControl
            Grid.Row="1"
            Grid.Column="1"
            Margin="10, 10, 10, 10"
            Content ="{Binding CurrentBaseView}"
            />

            <TextBlock
            HorizontalAlignment="Left"
            Margin="10,0,0,0"
            TextWrapping="Wrap"
            Text="Редактор Base"
            VerticalAlignment="Center"
            FontSize="24" 
            FontFamily="Tahoma" 
            Height="29" 
            Width="159"/>

            <ItemsControl 
            ItemsSource="{Binding baseElementButtonViewModels}"
            Margin="10,10,10,10"
            Grid.Column="0"
            Grid.Row="1">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <StackPanel 
            HorizontalAlignment="Center"
            Margin="10,10,10,10"
            Grid.Column="1">
                <TextBlock 
                TextWrapping="Wrap" 
                Text="Элементы выбранного Base:"
                FontSize="24" 
                FontFamily="Tahoma"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
